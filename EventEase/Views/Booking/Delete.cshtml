@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h1 class="text-danger">Delete Booking</h1>
<hr />

<h5>Are you sure you want to delete this booking?</h5>

<div class="mb-4">
    <dl class="row">
        <dt class="col-sm-3">Event</dt>
        <dd class="col-sm-9">@Model.Event?.EventName</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Event?.Description</dd>

        <dt class="col-sm-3">Venue</dt>
        <dd class="col-sm-9">@Model.Venue?.VenueName</dd>

        <dt class="col-sm-3">Location</dt>
        <dd class="col-sm-9">@Model.Venue?.Location</dd>

        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.BookingDate.ToString("MMMM dd, yyyy")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="BookingId" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
